<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_200</item>
        <item name="colorAccent">@color/GREEN</item>
        <item name="iconColor">@color/GREEN</item>
    </style>

    <style name="GreenTheme" parent="AppTheme">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/green_dark</item>
        <item name="iconColor">@color/green</item>
        <item name="buttonStyle">@style/GreenButton</item>
        <item name="toolbarStyle">@style/GreenToolbar</item>
        <item name="editTextStyle">@style/GreenEditText</item>
    </style>

    <style name="RedTheme" parent="AppTheme">
