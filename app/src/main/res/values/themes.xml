        <item name="iconColor">@color/red</item>
        <item name="buttonStyle">@style/RedButton</item>
        <item name="toolbarStyle">@style/RedToolbar</item>
        <item name="editTextStyle">@style/RedEditText</item>
    </style>

    <style name="YellowTheme" parent="AppTheme">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/yellow_dark</item>
        <item name="colorAccent">@color/yellow_dark</item>
        <item name="iconColor">@color/yellow</item>
        <item name="buttonStyle">@style/YellowButton</item>
        <item name="toolbarStyle">@style/YellowToolbar</item>
        <item name="editTextStyle">@style/YellowEditText</item>
    </style>
